{
  "name": "match",
  "author": "Twilio Inc.",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "yarn start:storybook",
    "start:storybook": "start-storybook -p 6006",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "prettier:write": "prettier --write '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "lint:js": "eslint '**/*.{ts,tsx,js}'",
    "lint:css": "stylelint './packages/**/*.tsx'",
    "type-check": "yarn workspaces foreach run type-check",
    "build": "yarn workspaces foreach run build",
    "release": "lerna publish",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn type-check"
    }
  },
  "lint-staged": {
    "*.{json,yml,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ],
    "*.tsx": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@storybook/addon-a11y": "6.0.0-rc.8",
    "@storybook/addon-actions": "6.0.0-rc.8",
    "@storybook/addon-knobs": "6.0.0-rc.8",
    "@storybook/addon-viewport": "6.0.0-rc.8",
    "@storybook/addons": "6.0.0-rc.8",
    "@storybook/core": "6.0.0-rc.8",
    "@storybook/react": "6.0.0-rc.8",
    "@testing-library/react": "^10.4.7",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "@types/react": "^16.9.43",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-jest": "^26.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "core-js": "^3.6.5",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "styled-components": "^5.1.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "browserslist": [
    "last 2 versions and > 1%",
    "last 2 Firefox versions",
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 FirefoxAndroid versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions",
    "not IE <= 11",
    "not IE_Mob <= 11",
    "not dead"
  ],
  "engines": {
    "node": "12.x"
  }
}
