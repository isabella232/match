{
  "name": "match",
  "author": "Twilio Inc.",
  "license": "UNLICENSED",
  "homepage": "https://match.twilio.design",
  "private": true,
  "workspaces": [
    "configs/**",
    "packages/**",
    "plugins/**",
    "website",
    "website-new"
  ],
  "scripts": {
    "bootstrap": "yarn build:tokens && yarn convert:icons && yarn convert:logos && yarn build:plugins",
    "start:all": "concurrently \"yarn:start:storybook\" \"yarn:start:website\"",
    "start:storybook": "start-storybook -p 6006",
    "start:website": "yarn workspace match-website start",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js,json,md,mdx,yml,css}'",
    "prettier:write": "prettier --write '**/*.{ts,tsx,js,json,md,mdx,yml,css}'",
    "prettier:check": "prettier --check '**/*.{ts,tsx,js,json,md,mdx,yml,css}'",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint '**/*.{ts,tsx,js}'",
    "lint:css": "stylelint './**/*.css' && stylelint './**/styles.ts'",
    "type-check": "yarn workspaces foreach run type-check",
    "build:all": "yarn workspaces foreach --topological-dev run build",
    "build:tokens": "yarn workspace @twilio-labs/match-tokens build",
    "build:icons": "yarn workspaces foreach --topological-dev --parallel --include '@twilio-labs/match-icons*' run build",
    "build:logos": "yarn workspaces foreach --topological-dev --parallel --include '@twilio-labs/match-logos*' run build",
    "build:plugins": "yarn workspaces foreach --topological-dev --parallel --include 'plugin*' run build",
    "build:storybook": "build-storybook -c .storybook -o ./build",
    "convert:icons": "yarn workspaces foreach --topological-dev --parallel --include '@twilio-labs/match-icons*' run convert",
    "convert:logos": "yarn workspaces foreach --topological-dev --parallel --include '@twilio-labs/match-logos*' run convert",
    "version:all": "yarn version check --interactive && yarn version apply --all",
    "publish:all": "yarn workspaces foreach --topological-dev run publish",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:ci": "jest --ci",
    "yarn:update": "yarn set version latest && yarn plugin import typescript && yarn plugin import version && yarn plugin import interactive-tools && yarn plugin import workspace-tools"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,yml,md,mdx,css}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ],
    "*.{css}": [
      "stylelint --fix"
    ],
    "styles.ts": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.14.0",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "7.13.8",
    "@babel/plugin-proposal-private-methods": "7.13.0",
    "@babel/plugin-proposal-private-property-in-object": "7.14.0",
    "@babel/plugin-transform-runtime": "7.13.15",
    "@babel/preset-env": "7.14.1",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@commitlint/cli": "12.1.2",
    "@commitlint/config-conventional": "12.1.2",
    "@storybook/addon-a11y": "6.2.9",
    "@storybook/addon-essentials": "6.2.9",
    "@storybook/addon-viewport": "6.2.9",
    "@storybook/core": "6.2.9",
    "@storybook/react": "6.2.9",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@twilio-labs/match-fonts": "workspace:packages/match-fonts",
    "@types/jest": "26.0.23",
    "@types/jest-axe": "3.5.1",
    "@types/node": "14.17.0",
    "@types/react": "17.0.5",
    "@types/testing-library__jest-dom": "5.9.5",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "@yarnpkg/pnpify": "3.0.0-rc.3",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-styled-components": "1.12.0",
    "concurrently": "6.1.0",
    "core-js": "3.12.1",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-unicorn": "32.0.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "jest-axe": "4.1.0",
    "jest-styled-components": "7.0.4",
    "lint-staged": "11.0.0",
    "plugin-storybook-theme-switcher": "workspace:plugins/storybook-theme-switcher",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "styled-components": "5.3.0",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended": "5.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-declaration-block-no-ignored-properties": "2.3.0",
    "stylelint-no-unsupported-browser-features": "4.1.4",
    "stylelint-order": "4.1.0",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-jest": "26.5.6",
    "tsconfig-match": "workspace:configs/tsconfig",
    "typescript": "4.2.4",
    "webpack": "5.37.0"
  },
  "browserslist": [
    "last 2 versions and > 1%",
    "last 2 Firefox versions",
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 FirefoxAndroid versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions",
    "not op_mini all",
    "not IE <= 11",
    "not IE_Mob <= 11",
    "not dead"
  ],
  "engines": {
    "node": "14.x"
  }
}
