{
  "name": "match",
  "author": "Twilio Inc.",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "start:all": "concurrently \"yarn:start:storybook\" \"yarn:start:website\"",
    "start:storybook": "start-storybook -p 6006",
    "start:website": "yarn workspace @twilio-labs/match-website dev",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "prettier:write": "prettier --write '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "lint:js": "eslint '**/*.{ts,tsx,js}'",
    "lint:css": "stylelint './packages/**/*.tsx'",
    "type-check": "yarn workspaces foreach run type-check",
    "build": "yarn workspaces foreach --topological-dev run build",
    "build:tokens": "yarn workspaces foreach --topological-dev --parallel --include '@twilio-labs/match-tokens*' run build",
    "version:all": "yarn version check --interactive && yarn version apply --all",
    "publish:all": "yarn workspaces foreach --topological-dev run publish",
    "release": "yarn version:all && yarn publish:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "deploy:website": "yarn workspace @twilio-labs/match-website deploy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn && yarn build:tokens",
      "post-merge": "yarn && yarn build:tokens"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,yml,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ],
    "*.tsx": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@storybook/addon-a11y": "6.0.21",
    "@storybook/addon-actions": "6.0.21",
    "@storybook/addon-knobs": "6.0.21",
    "@storybook/addon-viewport": "6.0.21",
    "@storybook/core": "6.0.21",
    "@storybook/react": "6.0.21",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@twilio-labs/storybook-theme-switcher": "workspace:packages/storybook-theme-switcher",
    "@types/jest": "^26.0.13",
    "@types/jest-axe": "^3.5.0",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@types/testing-library__jest-dom": "^5.9.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.3.0",
    "babel-plugin-styled-components": "^1.11.1",
    "concurrently": "^5.3.0",
    "core-js": "^3.6.5",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-axe": "^4.0.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "styled-components": "^5.1.1",
    "stylelint": "^13.7.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^26.3.0",
    "typescript": "^3.9.7"
  },
  "browserslist": [
    "last 2 versions and > 1%",
    "last 2 Firefox versions",
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 FirefoxAndroid versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions",
    "not IE <= 11",
    "not IE_Mob <= 11",
    "not dead"
  ],
  "engines": {
    "node": "12.x"
  }
}
