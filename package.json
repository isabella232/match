{
  "name": "match",
  "author": "Twilio Inc.",
  "license": "UNLICENSED",
  "homepage": "https://match.twilio.design",
  "private": true,
  "workspaces": [
    "packages/**",
    "plugins/**",
    "configs/**"
  ],
  "scripts": {
    "bootstrap": "yarn build:tokens && yarn convert:icons && yarn build:plugins",
    "start:all": "concurrently \"yarn:start:storybook\" \"yarn:start:website\"",
    "start:storybook": "start-storybook -p 6006",
    "start:website": "yarn workspace @twilio-labs/match-website dev",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "prettier:write": "prettier --write '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "lint:js": "eslint '**/*.{ts,tsx,js}'",
    "lint:css": "stylelint './**/*.{tsx,css}' && stylelint './**/styles.ts'",
    "type-check": "yarn workspaces foreach run type-check",
    "build:all": "yarn workspaces foreach --topological-dev run build",
    "build:tokens": "yarn workspace @twilio-labs/match-tokens build",
    "build:plugins": "yarn workspaces foreach --topological-dev --include 'plugin*' run build",
    "build:storybook": "build-storybook -c .storybook -o ./build",
    "convert:icons": "yarn workspaces foreach --parallel --include '@twilio-labs/match-icons*' run convert",
    "version:all": "yarn version check --interactive && yarn version apply --all",
    "publish:all": "yarn workspaces foreach --topological-dev run publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,yml,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ],
    "*.{tsx,css}": [
      "stylelint"
    ],
    "styles.ts": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@storybook/addon-a11y": "6.0.28",
    "@storybook/addon-essentials": "6.0.28",
    "@storybook/addon-viewport": "6.0.28",
    "@storybook/core": "6.0.28",
    "@storybook/react": "6.0.28",
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.1",
    "@twilio-labs/match-fonts": "workspace:packages/match-fonts",
    "@types/jest": "26.0.15",
    "@types/jest-axe": "3.5.1",
    "@types/node": "14.14.6",
    "@types/react": "16.9.56",
    "@types/testing-library__jest-dom": "5.9.5",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "babel-jest": "26.6.3",
    "babel-loader": "8.1.0",
    "babel-plugin-styled-components": "1.11.1",
    "concurrently": "5.3.0",
    "core-js": "3.7.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-unicorn": "23.0.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-axe": "4.1.0",
    "jest-styled-components": "7.0.3",
    "lint-staged": "10.5.1",
    "plugin-storybook-theme-switcher": "workspace:plugins/storybook-theme-switcher",
    "prettier": "2.1.2",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-is": "16.13.1",
    "styled-components": "5.2.1",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-declaration-block-no-ignored-properties": "2.3.0",
    "stylelint-no-unsupported-browser-features": "4.1.4",
    "stylelint-order": "4.1.0",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-jest": "26.4.4",
    "tsconfig-match": "workspace:configs/tsconfig",
    "typescript": "4.0.5",
    "webpack": "5.4.0"
  },
  "browserslist": [
    "last 2 versions and > 1%",
    "last 2 Firefox versions",
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 FirefoxAndroid versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions",
    "not IE <= 11",
    "not IE_Mob <= 11",
    "not dead"
  ],
  "engines": {
    "node": "14.x"
  }
}
