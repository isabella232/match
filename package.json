{
  "name": "match",
  "author": "Twilio Inc.",
  "license": "UNLICENSED",
  "homepage": "https://match.twilio.design",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "bootstrap": "yarn build:tokens && yarn build:plugins",
    "start:all": "concurrently \"yarn:start:storybook\" \"yarn:start:website\"",
    "start:storybook": "start-storybook -p 6006",
    "start:website": "yarn workspace @twilio-labs/match-website dev",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "prettier:write": "prettier --write '**/*.{ts,tsx,js,json,md,mdx,yml}'",
    "lint:js": "eslint '**/*.{ts,tsx,js}'",
    "lint:css": "stylelint './**/*.{tsx,css}' && stylelint './**/styles.ts'",
    "type-check": "yarn workspaces foreach run type-check",
    "build:all": "yarn workspaces foreach --topological-dev run build",
    "build:tokens": "yarn workspaces foreach --topological-dev --include '@twilio-labs/match-tokens*' run build",
    "build:plugins": "yarn workspace @twilio-labs/storybook-theme-switcher build",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "version:all": "yarn version check --interactive && yarn version apply --all",
    "publish:all": "yarn workspaces foreach --topological-dev run publish",
    "release": "yarn version:all && yarn publish:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "chromatic": "yarn chromatic --project-token=p9na1dnp8e8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,yml,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ],
    "*.{tsx,css}": [
      "stylelint"
    ],
    "styles.ts": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "7.11.0",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@storybook/addon-a11y": "6.0.26",
    "@storybook/addon-actions": "6.0.26",
    "@storybook/addon-backgrounds": "6.0.26",
    "@storybook/addon-controls": "6.0.26",
    "@storybook/addon-viewport": "6.0.26",
    "@storybook/core": "6.0.26",
    "@storybook/react": "6.0.26",
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "11.0.4",
    "@twilio-labs/match-fonts": "workspace:packages/match-fonts",
    "@twilio-labs/storybook-theme-switcher": "workspace:packages/storybook-theme-switcher",
    "@types/jest": "26.0.14",
    "@types/jest-axe": "3.5.0",
    "@types/node": "14.11.5",
    "@types/react": "16.9.51",
    "@types/testing-library__jest-dom": "5.9.4",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "4.4.0",
    "babel-jest": "26.5.2",
    "babel-plugin-styled-components": "1.11.1",
    "chromatic": "5.2.0",
    "concurrently": "5.3.0",
    "core-js": "3.6.5",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.21.3",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-unicorn": "22.0.0",
    "husky": "4.3.0",
    "jest": "26.5.2",
    "jest-axe": "4.0.0",
    "jest-styled-components": "7.0.3",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-is": "16.13.1",
    "styled-components": "5.2.0",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-declaration-block-no-ignored-properties": "2.3.0",
    "stylelint-no-unsupported-browser-features": "4.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "browserslist": [
    "last 2 versions and > 1%",
    "last 2 Firefox versions",
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 FirefoxAndroid versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions",
    "not IE <= 11",
    "not IE_Mob <= 11",
    "not dead"
  ],
  "engines": {
    "node": "12.x"
  }
}
