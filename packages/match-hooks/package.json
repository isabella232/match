{
  "name": "@twilio-labs/match-hooks",
  "version": "1.0.0",
  "description": "Twilio Match Design System React Hooks",
  "author": "Twilio Inc.",
  "license": "Apache-2.0",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/twilio-labs/match",
    "directory": "packages/match-hooks"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf ./dist",
    "compile": "rollup -c node:match --environment NODE_ENV:production",
    "compile:dev": "rollup -c node:match --environment NODE_ENV:development",
    "type-check": "tsc --noEmit --composite false",
    "publish": "yarn npm publish --tolerate-republish"
  },
  "peerDependencies": {
    "react": "17.x"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@testing-library/react": "12.0.0",
    "@types/babel__core": "7.1.14",
    "@types/react": "17.0.11",
    "core-js": "3.15.1",
    "jest": "27.0.5",
    "react": "17.0.2",
    "rollup": "2.52.2",
    "rollup-config-match": "workspace:configs/rollup",
    "tsconfig-match": "workspace:configs/tsconfig",
    "tslib": "2.3.0",
    "typescript": "4.3.4"
  }
}
