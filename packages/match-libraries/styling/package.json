{
  "name": "@twilio-labs/match-styling-library",
  "version": "0.0.0",
  "description": "Styling library for Twilio Match Design System.",
  "author": "Twilio Inc.",
  "license": "UNLICENSED",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/twilio-labs/match",
    "directory": "packages/match-libraries/styling"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "yarn clean && yarn compile:dev",
    "clean": "rm -rf ./dist",
    "compile": "rollup -c node:match --environment NODE_ENV:production",
    "compile:dev": "rollup -c node:match --environment NODE_ENV:development",
    "type-check": "tsc --noEmit --composite false",
    "publish": "yarn npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@twilio-labs/match-tokens": "workspace:packages/match-tokens/core",
    "@types/styled-system": "^5.1.10",
    "rollup": "2.28.2",
    "rollup-config-match": "workspace:configs/rollup",
    "tsconfig-match": "workspace:configs/tsconfig",
    "tslib": "2.0.3",
    "typescript": "4.0.5"
  },
  "dependencies": {
    "styled-system": "5.1.5"
  }
}
