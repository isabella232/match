{
  "name": "@twilio-labs/match-props",
  "version": "0.0.0",
  "description": "Prop utilities for Twilio Match Design System.",
  "author": "Twilio Inc.",
  "license": "UNLICENSED",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/twilio-labs/match",
    "directory": "packages/match-props"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf ./dist",
    "compile": "rollup -c node:match --environment NODE_ENV:production",
    "compile:dev": "rollup -c node:match --environment NODE_ENV:development",
    "type-check": "tsc --noEmit --composite false",
    "publish": "yarn npm publish --tolerate-republish"
  },
  "peerDependencies": {
    "@twilio-labs/match-styling-library": "^0.0.0",
    "@twilio-labs/match-tokens": "^0.3.0",
    "prop-types": "15.x"
  },
  "devDependencies": {
    "@twilio-labs/match-styling-library": "workspace:packages/match-libraries/styling",
    "@twilio-labs/match-tokens": "workspace:packages/match-tokens/new",
    "@types/prop-types": "15.7.3",
    "prop-types": "15.7.2",
    "rollup": "2.28.2",
    "rollup-config-match": "workspace:configs/rollup",
    "tsconfig-match": "workspace:configs/tsconfig",
    "tslib": "2.0.3",
    "typescript": "4.0.3"
  }
}
